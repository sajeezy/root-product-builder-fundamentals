[
  {
    "block": {
      "key": "claim_details_heading",
      "type": "markdown",
      "markdown": "### Incident description"
    }
  },
  {
    "block": {
      "key": "claim_type",
      "type": "radio",
      "title": "Claim type",
      "options": [
        {
          "key": "illness",
          "value": "Illness"
        },
        {
          "key": "death",
          "value": "Death"
        }
      ]
    }
  },
  {
    "block": {
      "key": "incident_date",
      "type": "input.date",
      "title": "Date of incident"
    }
  },
  {
    "block": {
      "key": "reported_date",
      "type": "input.date",
      "title": "Date reported",
      "default_value": "{{dateFormat (now) 'YYYY-MM-DD'}}"
    }
  },
  {
    "block": {
      "key": "date_warning_past",
      "type": "alert",
      "color": "danger",
      "markdown": "Warning: Claims must be logged within 60 days of the incident occurring."
    },
    "show_if": "{{ifCondition (dateDifference claim.block_states.reported_date.value claim.block_states.incident_date measurement='days') '<' 60}}"
  },
  {
    "block": {
      "key": "date_warning_illness",
      "type": "alert",
      "color": "danger",
      "markdown": "Warning: Claim for illness must be outside of the waiting period of 1 month."
    },
    "show_if": "{{ifCondition (dateDifference claim.block_states.incident_date.value claim.policy.start_date measurement='days') '<' 30}}"
  },
  {
    "block": {
      "key": "date_warning_death",
      "type": "alert",
      "color": "danger",
      "markdown": "Warning: Claim for death must be outside of the waiting period of 1 month."
    },
    "show_if": "{{ifCondition (dateDifference claim.block_states.incident_date.value claim.policy.start_date measurement='days') '<' 90}}"
  },
  {
    "block": {
      "key": "incident_description",
      "type": "input.paragraph",
      "title": "Description of incident"
    }
  },
  {
    "block": {
      "key": "claim_type_divider",
      "type": "divider"
    }
  },
  {
    "block": {
      "key": "payment_details_heading",
      "type": "markdown",
      "markdown": "### Payment details"
    }
  },
  {
    "block": {
      "key": "bank_name",
      "type": "dropdown",
      "title": "Bank Name",
      "options": [
        { "key": "absa", "value": "Absa" },
        { "key": "african_bank", "value": "African Bank" },
        { "key": "bidvest", "value": "Bidvest" },
        { "key": "capitec", "value": "Capitec" },
        { "key": "discovery_bank", "value": "Discovery Bank" },
        { "key": "fnb", "value": "Fnb" },
        { "key": "investec", "value": "Investec" },
        { "key": "ithala", "value": "Ithala" },
        { "key": "nedbank", "value": "Nedbank" },
        { "key": "old_mutual", "value": "Old Mutual" },
        { "key": "postbank", "value": "Postbank" },
        { "key": "standard_bank", "value": "Standard Bank" },
        { "key": "tyme_bank", "value": "Tyme Bank" }
      ],
      "default_value": "ABSA"
    }
  },
  {
    "block": {
      "key": "bank_code",
      "type": "input.number",
      "title": "Branch Code",
      "placeholder": 632005
    }
  },
  {
    "block": {
      "key": "account_type",
      "type": "dropdown",
      "title": "Account Type",
      "options": [
        {
          "key": "savings_account",
          "value": "Savings"
        },
        {
          "key": "cheque_account",
          "value": "Cheque"
        }
      ]
    }
  },
  {
    "block": {
      "key": "account_number",
      "type": "input.number",
      "title": "Account Number",
      "placeholder": 123456789
    }
  },
  {
    "block": {
      "type": "payout_request",
      "key": "payout_block",
      "title": "Dinosaur Payout Block",
      "description": "Payout for the injured or deceased dinosaur",
      "payee": {
        "type": "{{ policyholder }}",
        "amount": "{{claim.policy.module.sum_assured}}",
        "percentage": 100,
        "payment_details": {
          "type": "eft",
          "details": {
            "name": "{{claim.policy.module.name}}",
            "bank_name": "{{claim.block_states.bank_name.value}}",
            "bank_code": "{{claim.block_states.bank_code.value}}",
            "account_type": "{{claim.block_states.account_type.value}}",
            "account_number": "{{claim.block_states.account_number.value}}"
          }
        }
      }
    }
  }
]
